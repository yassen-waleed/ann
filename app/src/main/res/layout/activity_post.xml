<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_post_scene"
    tools:context=".Post">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0f172a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="City"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/citytxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Postal address"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/postal"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Surface area"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/surface"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text=" year"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Bedrooms"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bed"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textWebPassword"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="rental price"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="status "
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/status"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:entries="@array/array_status"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <Button
                    android:id="@+id/photo"
                    android:layout_width="67dp"
                    android:layout_height="62dp"
                    android:layout_weight=".6"
                    android:backgroundTint="#94a3b8"
                    android:ems="10"
                    android:gravity="center"
                    android:onClick="Choose"
                    android:text="image"
                    android:textColor="#0f172a " />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="211dp"
                    android:layout_height="158dp"
                    android:layout_weight=".4"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="availability date "
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:inputType="date"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Description"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/discription"
                    android:layout_width="231dp"
                    android:layout_height="100dp"

                    android:layout_weight=".4" />

            </LinearLayout>
            <CheckBox
                android:id="@+id/balcony"
                android:layout_width="368dp"
                android:layout_height="50dp"
                android:text="Balcony"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
             />

            <CheckBox
                android:id="@+id/garden"
                android:layout_width="366dp"
                android:layout_height="49dp"
                android:text="garden"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#94a3b8"
                android:onClick="post"
                android:text="Post"
                android:textColor="#0f172a " />


        </LinearLayout>
    </ScrollView>

</LinearLayout>