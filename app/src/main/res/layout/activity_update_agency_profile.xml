<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".updateAgencyProfile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Agency name"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_nametxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Email"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_emailtxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="Old password"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_Oldpasstxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView

                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="password"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_passtxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:text=""
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="confirm"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_confirmtxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                oid:textColor="#FFFFFF"

                <TextView

                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="country"
                    android:textAlignment="textStart"
                    android:textSize="20sp" />

                <Spinner
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_countrytxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:entries="@array/array_country"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">
                Color="#FFFFFF"

                <TextView


                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="city "
                    android:textAlignment="textStart"
                    android:textSize="20sp" />

                <Spinner
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_citytxt"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:entries="@array/array_city"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:text="phone number"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <EditText
                    android:textColor="#EAE9E9"
                    android:id="@+id/agency_phone_number"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:background="@drawable/radius"
                android:id="@+id/upadate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#94a3b8"
                android:onClick="update"
                android:text="Update"
                android:textColor="@color/background" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

